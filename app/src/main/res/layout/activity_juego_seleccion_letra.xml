<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="dane.com.gyl.dane.JuegoSeleccionLetraActivity"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:background="#DE3A11"
        android:baselineAligned="false"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout"
        android:padding="10sp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="0.4" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/letra_m"
                android:id="@+id/letra1"
                android:textSize="22sp"
                android:textColor="#ffffff"
                android:textIsSelectable="true"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/separador_letra"
                android:id="@+id/separador1"
                android:layout_marginLeft="7sp"
                android:textSize="26sp"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/letra_n"
                android:id="@+id/letra2"
                android:textSize="22sp"
                android:textColor="#ffffff"
                android:textIsSelectable="true"
                android:textStyle="bold"
                android:layout_marginLeft="7sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/separador_letra"
                android:id="@+id/separador2"
                android:layout_marginLeft="7sp"
                android:textSize="26sp"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/letra_p"
                android:id="@+id/letra3"
                android:textSize="22sp"
                android:textColor="#ffffff"
                android:textIsSelectable="true"
                android:textStyle="bold"
                android:layout_marginLeft="7sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/separador_letra"
                android:id="@+id/separador3"
                android:layout_marginLeft="7sp"
                android:textSize="26sp"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/letra_l"
                android:id="@+id/letra4"
                android:textSize="22sp"
                android:textColor="#ffffff"
                android:textIsSelectable="true"
                android:textStyle="bold"
                android:layout_marginLeft="7sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="right"
            android:layout_weight="0.4" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ejercicio_1"
                android:id="@+id/ejercicio_1"
                android:textSize="22sp"
                android:textColor="#ffffff"
                android:textIsSelectable="true"
                android:textStyle="bold"
                android:layout_marginLeft="7sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/separador_letra"
                android:id="@+id/separador4"
                android:layout_marginLeft="7sp"
                android:textSize="26sp"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ejercicio_2"
                android:id="@+id/ejercicio_2"
                android:textSize="22sp"
                android:textColor="#ffffff"
                android:textIsSelectable="true"
                android:textStyle="bold"
                android:layout_marginLeft="7sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/separador_letra"
                android:id="@+id/separador5"
                android:layout_marginLeft="7sp"
                android:textSize="26sp"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ejercicio_3"
                android:id="@+id/ejercicio_3"
                android:textSize="22sp"
                android:textColor="#ffffff"
                android:textIsSelectable="true"
                android:textStyle="bold"
                android:layout_marginLeft="7sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/descripcion_seleccion"
        android:id="@+id/titulo"
        android:textColor="#000000"
        android:textSize="23sp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10sp"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginTop="10sp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/letra"
        android:src="@drawable/letra_m_model"
        android:layout_below="@+id/titulo"
        android:layout_centerHorizontal="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_above="@+id/imageView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/linea"
        android:layout_below="@+id/letra"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/imageView4" />


<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
    android:layout_alignParentTop="false">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imagenes_fila01"
        android:gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/letra_01"
                android:src="@drawable/letra_m_01"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/letra_02"
                android:src="@drawable/letra_m_02"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imagenes_fila02"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/letra_03"
            android:src="@drawable/letra_m_03"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/letra_04"
            android:src="@drawable/letra_m_04"/>

    </LinearLayout>


</LinearLayout>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botonAvanzar"
        android:src="@drawable/flechita"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>